    "dep": "gemforge deploy"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.2.0",
    "@commitlint/config-conventional": "^17.2.0",
    "@types/node": "^18.16.16",
    "dotenv": "^16.3.1",
