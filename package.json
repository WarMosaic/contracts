    "glob": "^10.3.10",
    "husky": "^8.0.2",
    "prettier": "^2.8.8",
    "solc": "^0.8.21",
    "solhint": "^3.3.7",
    "solidity-coverage": "^0.7.21",
    "solidity-docgen": "^0.5.17"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "engineStrict": true,
  "dependencies": {
    "@ethersproject/abi": "^5.7.0",
    "typescript": "^5.2.2"
