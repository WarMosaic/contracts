{
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "Node",
    "outDir": "build",
    "target": "ES2015",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,		
    "allowJs": true,
    "skipLibCheck": true,
    "declaration": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
  },
  "include": ["src-ts/**/*"],
  "exclude": ["build", "node_modules"]
}